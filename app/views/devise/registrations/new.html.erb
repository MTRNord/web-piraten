<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
      <%= f.input :username, required: true, autofocus: true,
                  label: false,  placeholder: t("devise.registrations.labels.username"), class: "form-control" %>
      <%= f.input :email, required: true, label: false,  placeholder: t("devise.registrations.labels.email") %>
      <%= f.input :password, required: true, label: false,  placeholder: t("devise.registrations.labels.password") %>
      <%= f.input :password_confirmation, required: true,label: false,  placeholder: t("devise.registrations.labels.password_confirm") %>
  </div>

  <div class="form-actions">
      <%= f.button :submit, "Sign up", class: "btn-block btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>